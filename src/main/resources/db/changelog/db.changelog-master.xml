      <column name="event_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="status" type="VARCHAR(255)"/>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-5" author="macbook">
    <createTable tableName="events">
      <column autoIncrement="true" name="event_id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_events"/>
      </column>
      <column name="title" type="VARCHAR(255)"/>
      <column name="description" type="VARCHAR(255)"/>
      <column name="event_date" type="DATE"/>
      <column name="start_time" type="TIME"/>
      <column name="end_time" type="TIME"/>
      <column name="location" type="VARCHAR(255)"/>
      <column name="created_by" type="UUID">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-6" author="macbook">
    <createTable tableName="fcm_token">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_fcmtoken"/>
      </column>
      <column name="token" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="account_id" type="UUID"/>
      <column name="device_type" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-7" author="macbook">
    <createTable tableName="messages">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_messages"/>
      </column>
      <column name="chat_room_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="content" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-8" author="macbook">
    <createTable tableName="prayer_request">
      <column name="id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_prayerrequest"/>
      </column>
      <column name="title" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="message" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="submitted_by" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="is_anonymous" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="approved" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-9" author="macbook">
    <createTable tableName="refresh_tokens">
