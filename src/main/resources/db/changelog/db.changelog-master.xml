<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
  objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1760812485638-1" author="macbook">
    <createTable tableName="account">
      <column name="id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account"/>
      </column>
      <column name="email" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="username" type="VARCHAR(255)"/>
      <column name="password" type="VARCHAR(255)"/>
      <column name="first_name" type="VARCHAR(255)"/>
      <column name="last_name" type="VARCHAR(255)"/>
      <column name="profile_picture" type="VARCHAR(255)"/>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-2" author="macbook">
    <createTable tableName="chat_room_users">
      <column name="chat_room_id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_chat_room_users"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_chat_room_users"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-3" author="macbook">
    <createTable tableName="chat_rooms">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_chat_rooms"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="type" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="channel_id" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-4" author="macbook">
    <createTable tableName="event_attendance">
      <column autoIncrement="true" name="attendance_id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_event_attendance"/>
