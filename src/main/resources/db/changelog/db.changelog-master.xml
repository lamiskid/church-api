      </column>
      <column name="token" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="expires_at" type="BIGINT"/>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-10" author="macbook">
    <createTable tableName="user_role">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role"/>
      </column>
      <column name="role_type" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1760812485638-11" author="macbook">
    <addUniqueConstraint columnNames="channel_id" constraintName="uc_chat_rooms_channel"
      tableName="chat_rooms"/>
  </changeSet>
  <changeSet id="1760812485638-12" author="macbook">
    <addUniqueConstraint columnNames="token" constraintName="uc_fcmtoken_token"
      tableName="fcm_token"/>
  </changeSet>
  <changeSet id="1760812485638-13" author="macbook">
    <addUniqueConstraint columnNames="token" constraintName="uc_refresh_tokens_token"
      tableName="refresh_tokens"/>
  </changeSet>
  <changeSet id="1760812485638-14" author="macbook">
    <addForeignKeyConstraint baseColumnNames="created_by" baseTableName="events"
      constraintName="FK_EVENTS_ON_CREATED_BY" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>
  <changeSet id="1760812485638-15" author="macbook">
    <addForeignKeyConstraint baseColumnNames="event_id" baseTableName="event_attendance"
