      constraintName="FK_EVENT_ATTENDANCE_ON_USER" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>
  <changeSet id="1760812485638-17" author="macbook">
    <addForeignKeyConstraint baseColumnNames="account_id" baseTableName="fcm_token"
      constraintName="FK_FCMTOKEN_ON_ACCOUNT" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>
  <changeSet id="1760812485638-18" author="macbook">
