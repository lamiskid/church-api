<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
  objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
  <changeSet id="1759538256824-1" author="abolade">
    <createTable tableName="account">
      <column name="id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_account"/>
      </column>
      <column name="email" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="username" type="VARCHAR(255)"/>
      <column name="password" type="VARCHAR(255)"/>
      <column name="first_name" type="VARCHAR(255)"/>
      <column name="last_name" type="VARCHAR(255)"/>
      <column name="profile_picture" type="VARCHAR(255)"/>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="1759538256824-2" author="abolade">
    <createTable tableName="chat_room_users">
      <column name="chat_room_id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_chat_room_users"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_chat_room_users"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="1759538256824-3" author="abolade">
    <createTable tableName="chat_rooms">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_chat_rooms"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="type" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="1759538256824-4" author="abolade">
    <createTable tableName="messages">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_messages"/>
      </column>
      <column name="chat_room_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="sender_id" type="UUID"/>
      <column name="content" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="1759538256824-5" author="abolade">
    <createTable tableName="refresh_tokens">
      <column autoIncrement="true" name="id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_refresh_tokens"/>
      </column>
      <column name="token" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="expires_at" type="BIGINT"/>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="1759538256824-6" author="abolade">
    <createTable tableName="user_role">
      <column autoIncrement="true" name="id" type="INT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role"/>
      </column>
      <column name="role_type" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="1759538256824-7" author="abolade">
    <addUniqueConstraint columnNames="token" constraintName="uc_refresh_tokens_token"
      tableName="refresh_tokens"/>
  </changeSet>

  <changeSet id="1759538256824-8" author="macbook">
    <addForeignKeyConstraint baseColumnNames="chat_room_id" baseTableName="messages"
      constraintName="FK_MESSAGES_ON_CHAT_ROOM" referencedColumnNames="id"
      referencedTableName="chat_rooms"/>
  </changeSet>


  <changeSet id="1759538256824-9" author="abolade">
    <addForeignKeyConstraint baseColumnNames="sender_id" baseTableName="messages"
      constraintName="FK_MESSAGES_ON_SENDER" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>

  <changeSet id="1759538256824-10" author="abolade">
    <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_role"
      constraintName="FK_USER_ROLE_ON_USER" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>

  <changeSet id="1759538256824-11" author="abolade">
    <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="chat_room_users"
      constraintName="fk_charoouse_on_account" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>

  <changeSet id="1759538256824-12" author="abolade">
    <addForeignKeyConstraint baseColumnNames="chat_room_id" baseTableName="chat_room_users"
      constraintName="fk_charoouse_on_chat_room" referencedColumnNames="id"
      referencedTableName="chat_rooms"/>
  </changeSet>

  <changeSet id="1760679079206-16" author="“abolade”">
    <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_role"
      constraintName="FK_USER_ROLE_ON_USER" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>
  <changeSet id="1760679079206-17" author="“abolade”">
    <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="chat_room_users"
      constraintName="fk_charoouse_on_account" referencedColumnNames="id"
      referencedTableName="account"/>
  </changeSet>
  <changeSet id="1760679079206-18" author="“abolade”">
    <addForeignKeyConstraint baseColumnNames="chat_room_id" baseTableName="chat_room_users"
      constraintName="fk_charoouse_on_chat_room" referencedColumnNames="id"
      referencedTableName="chat_rooms"/>
  </changeSet>
  <include file="/te/11-01-changelog.xml"/>

</databaseChangeLog>